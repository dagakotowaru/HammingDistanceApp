<Window x:Class="HammingDistanceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hamming Distance Calculator" Height="200" Width="400">
    <Grid>
        <Label Content="Enter first binary combination:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="BinaryInput1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,35,0,0"/>

        <Label Content="Enter second binary combination:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox Name="BinaryInput2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,95,0,0"/>

        <Button Content="Calculate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,130,0,0" Click="CalculateButton_Click"/>

        <Label Name="ResultLabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,130,0,0"/>
    </Grid>
</Window>